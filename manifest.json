{
	"manifest_version": 3,
	"name": "Assistant RGAA",
	"description": "Extension de navigateur permettant d'auditer des pages web en suivant le référentiel RGAA.",
	"version": "1.3.0",
	"icons": {
		"48": "img/icon-48.png",
		"96": "img/icon-96.png"
	},
	"applications": {
		"gecko": {
			"id": "assistant-rgaa@empreintedigitale.fr",
			"strict_min_version": "57.0"
		}
	},
	"action": {
		"default_title": "Assistant RGAA",
		"default_icon": {
			"96": "img/icon-96.png"
		}
	},
	"permissions": [
		"tabs",
		"storage"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"scripts": [
			"dist/background.js"
		]
	},
	"options_ui": {
		"page": "pages/options.html"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"pages/panel.html",
				"pages/devtools.html",
				"data/references/3-2016.json",
				"data/references/3-2017.json",
				"data/references/4-2019.json",
				"data/references/4-2021.json",
				"data/references/4-2023.json"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}
